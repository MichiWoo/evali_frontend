# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# App Configuration
VITE_APP_NAME=Evali
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Plataforma de Evaluaciones Online

# Environment
VITE_NODE_ENV=development
VITE_APP_ENV=local

# Authentication
VITE_AUTH_TOKEN_KEY=evali_token
VITE_AUTH_REFRESH_TOKEN_KEY=evali_refresh_token
VITE_AUTH_USER_KEY=evali_user

# Features Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# External Services
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=es

# Development
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HTTPS=false

# WebSocket (if used)
VITE_WS_URL=ws://localhost:8000/ws

# Notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_VAPID_PUBLIC_KEY=

# Timezone
VITE_DEFAULT_TIMEZONE=America/Mexico_City

# Date Format
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_DATETIME_FORMAT=DD/MM/YYYY HH:mm:ss

# Currency
VITE_DEFAULT_CURRENCY=MXN
VITE_CURRENCY_SYMBOL=$

# Pagination
VITE_PAGINATION_SIZE_OPTIONS=10,25,50,100

# Exam Configuration
VITE_DEFAULT_EXAM_DURATION=60
VITE_MAX_EXAM_DURATION=300
VITE_MIN_EXAM_DURATION=5

# Security
VITE_SESSION_TIMEOUT=120
VITE_AUTO_LOGOUT_WARNING=10
